{
  "name": "My Chrome Extension (React + TS)",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "A minimal Chrome extension using React, TypeScript, and Manifest V3.",
  "permissions": ["activeTab", "scripting", "tabs", "webRequest"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "icons": {
    "16": "icon50.png",
    "48": "icon50.png",
    "128": "icon50.png"
  }
}
